<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TEST.fiveresult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Поле для вопроса -->
        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="#EEEEEE"
            android:textSize="16sp"
            android:textColor="#000000"
            android:scrollbars="vertical"
            android:maxLines="5"
            android:ellipsize="end"
            android:text="Вопрос будет здесь" />

        <!-- Кнопки для выбора ответа -->
        <Button
            android:id="@+id/button5Points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Очень часто" />

        <Button
            android:id="@+id/button4Points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Часто" />

        <Button
            android:id="@+id/button3Points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Иногда" />

        <Button
            android:id="@+id/button2Points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Редко " />

        <Button
            android:id="@+id/button1Point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Никогда " />

        <!-- Кнопка для результата -->
        <Button
            android:id="@+id/resultbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Результат"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>