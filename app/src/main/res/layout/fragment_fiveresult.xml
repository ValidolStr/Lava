<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fiveresult">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Текст с текущим вопросом -->
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вопрос"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Кнопки для выбора ответа -->
    <Button
        android:id="@+id/button5Points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Да (5 очков)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button4Points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Почти да (4 очка)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button3Points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Иногда (3 очка)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button2Points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Редко (2 очка)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button1Point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Никогда (1 очко)"
        android:layout_marginBottom="16dp" />

    <!-- Текст с текущим счётом -->
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Счёт: 0"
        android:textSize="16sp" />
</LinearLayout>
</FrameLayout>