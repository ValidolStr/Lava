<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Поле для ввода проблемы -->
    <EditText
        android:id="@+id/problemEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите проблему"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <!-- Поле для ввода ответа -->
    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Почему это произошло?"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка подтверждения -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подтвердить"
        android:layout_marginBottom="16dp" />

    <!-- Текстовое поле для сообщений -->
    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка "Проблема решена?" -->
    <Button
        android:id="@+id/solvedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Проблема решена?"
        android:visibility="gone"
        android:layout_marginTop="16dp" />
</LinearLayout>