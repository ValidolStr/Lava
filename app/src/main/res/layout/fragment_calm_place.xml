<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context=".tecnics.CalmPlaceFragment">

    <!-- Текст техники -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Спокойное место"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прими удобную позу. Можешь сесть или лечь. Представь место, в котором тебе хорошо, спокойно и безопасно. Внимательно рассмотри его. Хорошо ли тебе там? Побудь мысленно в этом месте, ощути, как по телу разливается тепло и ощущение внутреннего счастья. В этом месте нет никаких проблем. Оно существует для того, чтобы туда шли за ресурсом и возможностью отпустить все свои тревоги, побыть в тишине и спокойствии. После того, как мысленно получилось побывать в своём «спокойном месте», можешь его нарисовать. И в моменты, когда захочется отдохнуть, посмотри на рисунок и мысленно возвращайся в свой уютный и укромный уголок, где всегда хорошо."
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:justificationMode="inter_word" /> <!-- Выравнивание по ширине -->

    <!-- Заголовок "Спокойное место" -->

    <!-- Второе текстовое поле "Спокойное место" -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Моё место"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="top"
        android:hint="Введите текст здесь"
        android:textColorHint="#80FFFFFF"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:layout_gravity="center" />

</LinearLayout>