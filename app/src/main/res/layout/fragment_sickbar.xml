<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TEST.fourresult"
    style="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Поле для вопроса -->
        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="#EEEEEE"
            android:textSize="16sp"
            android:textColor="#000000"
            android:scrollbars="vertical"
            android:maxLines="5"
            android:ellipsize="end"
            android:text="Вопрос будет здесь" />

        <!-- Кнопки для выбора ответа -->
        <Button
            android:id="@+id/buttonYes4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Никогда или изредка" />

        <Button
            android:id="@+id/buttonSometimes4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Иногда" />

        <Button
            android:id="@+id/buttonRarely4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Часто" />

        <Button
            android:id="@+id/buttonNever4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Почти всегда или постоянно" />


        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginVertical="20dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="#EEEEEE"
            android:textSize="16sp"
            android:textColor="#000000"
            android:scrollbars="vertical"
            android:maxLines="5"
            android:ellipsize="end"
            android:scrollHorizontally="false"
            android:visibility="gone" /> <!-- Initially hidden -->

        <!-- Кнопка для результата -->
        <Button
            android:id="@+id/buttonResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Результат"
            android:layout_marginTop="16dp"
            android:visibility="gone" /> <!-- Initially hidden -->

    </LinearLayout>
</FrameLayout>